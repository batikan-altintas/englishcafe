@model IEnumerable<BatikanSon.Models.Randevu_VM>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div class="index-container">
    <div class="table-box">
        <h1>Aktif Randevular</h1>
        <table class="table">
    
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.OgretmenAdSoyad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OgrenciAdSoyad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DilAdi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GunAdi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SaatAdi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MekanAdi)
                    </th>
                    <th></th>
                </tr>
            </thead>
    
            <tbody>
        @foreach (var item in Model) {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.OgretmenAdSoyad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OgrenciAdSoyad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DilAdi)
                    </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GunAdi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SaatAdi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MekanAdi)
                        </td>

                </tr>
        }
            </tbody>
        </table>

        <div>
            <a asp-action="Index" class="button-panel">Panele geri dön</a>
        </div>
    </div>
</div>
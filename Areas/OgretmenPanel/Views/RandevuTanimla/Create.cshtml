@model BatikanSon.Models.RandevuTanimi

@{
    ViewData["Title"] = "Create";
}




    <div class="panel-form-image">
        
        <div class="row justify-content-center align-items-center">
        
            <div class="col-md-4 mt-5">
                <div class="panel-form-container">
           
                    <div class="panel-form">
                <h2>Randevu Tanımla</h2>
                        <form asp-action="Create" class="border-0">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                            <div class="form-group">
                                <label asp-for="DilID" class="control-label">Dil</label>
                                <select asp-for="DilID" class ="form-control" asp-items="ViewBag.DilID"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="GunID" class="control-label">Gün</label>
                                <select asp-for="GunID" class ="form-control" asp-items="ViewBag.GunID"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="SaatID" class="control-label">Saat</label>
                                <select asp-for="SaatID" class ="form-control" asp-items="ViewBag.SaatID"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="MekanID" class="control-label">Mekan</label>
                                <select asp-for="MekanID" class ="form-control" asp-items="ViewBag.MekanID"></select>
                            </div>
                 
                                <div class="d-flex justify-content-between mt-3">
                            <input type="submit" value="Create" class="button-panel" />
                            <a asp-action="Index" class="button-panel">Panele geri dön</a>
                                </div>
                            
                           
                        </form>
                   </div>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

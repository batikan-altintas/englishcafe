@model BatikanSon.Models.Randevu

@{
    ViewData["Title"] = "Edit";
}


<div class="panel-form-image">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-4 mt-5">
            <div class="panel-form-container">
                <div class="panel-form">
                    <h2>Edit</h2>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RandevuID" />
                       
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="GerceklestiMi" /> @Html.DisplayNameFor(model => model.GerceklestiMi)
                            </label>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <input type="submit" value="Save" class="button-panel" />
                            <a asp-action="Index" class="button-panel">Panele geri dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

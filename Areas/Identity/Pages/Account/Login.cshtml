@page
@model LoginModel


<link rel="stylesheet" href="~/css/project.css" />


<div class="row">
    <div class="login-image">
    
     <div class="login-container">
        <section>
            <form id="account" method="post">
                <h2>Üye Girişi</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            
                            Beni Hatırla
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="button-panel">Giriş</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="color-link">Şifrenizi mi unuttunuz?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="color-link">Yeni üye olarak kayıt olun.</a>
                    </p>
     
                </div>
            </form>
        </section>
     </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
